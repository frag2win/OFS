[MASTER]
max-line-length=100
disable=
    C0111,  # missing-docstring (we'll add these gradually)
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access

good-names=i,j,k,ex,_,id,fd

[FORMAT]
max-line-length=100

[DESIGN]
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
